<br>
<form method="post" class="form-horizontal" ng-submit="submit()" name="form">
  <div class="form-group">
    <label class="control-label col-md-2"><%= I18n.t('name')%></label>
    <div class="col-md-3">
      <input type="text" name="name" ng-model="contact.name" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2"><%= I18n.t('email')%></label>
    <div class="col-md-3">
      <input type="email" name="email" ng-model="contact.email" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-2"><%= I18n.t('phone_number')%></label>
    <div class="col-md-3">
      <input type="text" name="phone_number" ng-model="contact.phone_number" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-3 col-md-offset-2">
      <button class="btn btn-primary btn-sm" ng-click="saveContact(contact)"><%= I18n.t('save')%></button>
    </div>
  </div>
</form>