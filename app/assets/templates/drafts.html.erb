<h2><%= I18n.t('drafts')%></h2>
<table class="table table-bordered">
  <tr>
    <th><%= I18n.t('subject')%></th>
    <th><%= I18n.t('action')%></th>
  </tr>
  <tr>
    <th><input type="text" class="form-control" placeholder="search by subject" ng-model="search.subject"></th>
    <th></th>
  </tr>
  <!-- paging -->
  <tr dir-paginate="email in emails | filter:{subject: search.subject} | itemsPerPage: 5" pagination-id="draft">
    <td>{{email.subject}}</td>
    <td>
      <a href="#/compose/{{email.id}}/edit" class="btn btn-success btn-sm"><%= I18n.t('edit')%></a>
      <a href="" class="btn btn-danger btn-sm" ng-click="destroy(contact.id)"><%= I18n.t('delete')%></a>
    </td>
  </tr>
</table>
<dir-pagination-controls pagination-id="draft"></dir-pagination-controls>
