<h2>
  <%= I18n.t('inbox')%>
</h2>
Sort by:
<select ng-model="orderProp" class="form-control orderProp-inbox">
  <option value="sender_email"><%= I18n.t('sender')%></option>
  <option value="subject"><%= I18n.t('subject')%></option>
  <option value="created_at"><%= I18n.t('timer')%></option>
</select>
<p>

<table class="table table-bordered">
  <tr>
    <th><%= I18n.t('sender')%></th>
    <th><%= I18n.t('subject')%></th>
    <th><%= I18n.t('timer')%></th>
    <th><%= I18n.t('actions')%></th>
  </tr>
  <tr>
    <th><input type="text" class="form-control" placeholder="search by sender email" ng-model="search.sender_email"></th>
    <th><input type="text" class="form-control" placeholder="search by subject" ng-model="search.subject"></th>
    <th><input type="text" class="form-control" placeholder="search by Timer" ng-model="search.created_at"></th>
    <th></th>
  </tr>
  <!-- paging -->
  <tr dir-paginate="email in emails | filter:{sender_email: search.sender_email, subject: search.subject, created_at: search.created_at} | orderBy:orderProp | itemsPerPage: 5" pagination-id="inbox">

    <td><a href="#/email_detail/{{email.id}}">{{email.sender_email}}</a> </td>
    <td>{{email.subject}}</td>
    <td> {{email.created_at | date:'dd-MM-yyyy'}} </td>
    <td>
      <a href="#/compose/{{email.id}}/edit" class="btn btn-success btn-sm"><%= I18n.t('edit')%></a>
      <a href="" class="btn btn-danger btn-sm" ng-click="destroy(email.id)"><%= I18n.t('delete')%></a>
    </td>
  </tr>
</table>
<dir-pagination-controls pagination-id="inbox"></dir-pagination-controls>
